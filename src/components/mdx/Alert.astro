---
const { type } = Astro.props;
---
{ type=== 'info' && <div class="font-regular relative mb-4 block w-full rounded-lg p-4 text-base leading-5 text-white opacity-100 bg-info"><slot /></div>}
{ type=== 'danger' && <div class="font-regular relative mb-4 block w-full rounded-lg p-4 text-base leading-5 text-white opacity-100 bg-danger"><slot /></div>}
{ type=== 'success' && <div class="font-regular relative mb-4 block w-full rounded-lg p-4 text-base leading-5 text-white opacity-100 bg-success"><slot /></div>}
{ type=== 'warning' && <div class="font-regular relative mb-4 block w-full rounded-lg p-4 text-base leading-5 text-white opacity-100 bg-warning"><slot /></div>}
